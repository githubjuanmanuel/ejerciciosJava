package menor;


public class SumaMultiplos {
    
    private int multiplos78;

    public int getMultiplos78() {
        return multiplos78;
    }

    public void setMultiplos78(int multiplos78) {
        this.multiplos78 = multiplos78;
    }
    
    
    
}
